doctype html
html(ng-app="application")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    base(href="/")
    title ng-match
    meta(name="description" content="Match the ng-model with another value in $scope")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    meta(property="og:type" content="website")
    meta(property="og:url" content="http://ng-match.tomchentw.com")
    meta(property="og:title" content="ng-match")
    meta(property="og:description" content="Match the ng-model with another value in $scope")

    <!-- Place favicon.ico and apple-touch-icon(s) in the root directory -->

    link(rel="stylesheet" href="//yandex.st/highlightjs/8.0/styles/default.min.css")
    link(rel="stylesheet" href=stylesheetLinkTag("application.css"))
    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.7.1/modernizr.min.js")
    script(type="text/javascript" src=javascriptIncludeTag("application.js"))
  body
    include partials/header

    div.container-fluid(role="main")
      header.page-header
        h1
          | ng-match
          br
          small Match the ng-model with another value in $scope

      section
        include partials/match

      section(ng-non-bindable)
        .row
          .col-xs-12.col-md-6
            pre
              code.language-html
                != highlight('tmp/.html-cache/partials/match.html')

          .col-xs-12.col-md-6
            pre
              code.language-javascript
                != highlight('tmp/.js-cache/partials/ctrls.js')

    include partials/footer
